
<div id="jumbotron_sports" class="jumbotron container-fluid">
  </div>
<div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
       <h1>Sports</h1>
       <button id="sports-button" class="btn-lg btn-block btn-primary" data-toggle="modal" data-target="#sports-modal">Add a Sport!</button>
       <!-- Sports Modal -->
  <div id="sports-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content text-center">
        <div class="modal-body">
          <h3>Sports</h3>
          <form action="/sports" method="POST">
            <div class="form-group">
              <input id="addSport" type="text" name="sport" placeholder="Enter a sport" />
            </div>
            <div class="form-group">
              <input id="addDescription" type="text" name="description" placeholder="enter a description" />
            </div>
            <button type="submit" class="btn btn-primary">Enter</button>
          </form>
        </div>
      </div>
    </div>
  </div>
 

  <div class="container-fluid">      
          {{#each results}}
          <div class="panel panel-default">
            <h3 class="panel-heading">{{dataValues.sport}}</h3>
              <p class="panel-body">{{dataValues.description}}</p>
          </div>
          {{/each}}
   </div>




  